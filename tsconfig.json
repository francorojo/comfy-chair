{
  "compilerOptions": {
    "target": "es6", // or higher
    "module": "commonjs", // For Jest, commonjs is recommended
    "jsx": "preserve", // if you are using React
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "jest.config.ts"
  ] // Adjust based on your project structure
}
